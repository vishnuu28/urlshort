<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home page</title>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    
</head>

<body>
    <!-- the backend data comes that called locals -->
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
        <p>URL GENDRATED : http://localhost:8001/url/<%= id %></p>
    <% } %>
        <div>
        <form method="POST" action="/URL">
        <label for=""> ORIGNAL URL</label>
        <input type="text" name ="url" placeholder="https://example.com">
        <button type="submit">GENRATE</button>
        </form>
        </div>

        <div>
            <% if (locals.urls) { %>
             <table>
                <thead>
                    <th>s. no</th>
                    <th>ShorID</th>
                    <th>redirect</th>
                    <th>clicks</th>
                </thead>

                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>
                     <td><%= index + 1   %></td>
                     <td><%= url.shortId %></td>
                     <td><%= url.redirectURL %></td>
                     <td><%= url.visitHistory.length%></td>
                    </tr>
                    <% }) %>
                </tbody>

             </table>
            <% } %>
        </div>
</body>
</html>